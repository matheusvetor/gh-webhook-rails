<div class="column is-12">
  <div class="card">
    <div class="card-table">
      <div class="content">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Full Name</th>
              <th>Owner Name</th>
            </tr>
          </thead>
          <tbody>
            <td><%= @repository.id %></td>
            <td><%= @repository.name %></td>
            <td><%= @repository.full_name %></td>
            <td><%= @repository.owner_name %></td>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- @repository.issues.each do |issue| %>
  <div class="column is-12">
    <div class="card">
      <div class="card-table">
        <div class="content">
          <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
            <thead>
              <tr>
                <th>Id</th>
                <th>Title</th>
                <th>State</th>
                <th>Body</th>
              </tr>
            </thead>
            <tbody>
              <td><%= issue.id %></td>
              <td><%= issue.title %></td>
              <td><%= issue.state %></td>
              <td><%= issue.body %></td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end -%>
